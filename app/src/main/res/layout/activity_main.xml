<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/twLogin"
        android:layout_width="82dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="29dp"
        android:text="Login:"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/twSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/twLogin"
        android:layout_marginTop="126dp"
        android:text="Senha:"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/twLogin"
        android:layout_toEndOf="@+id/twSenha"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/twSenha"
        android:layout_marginEnd="29dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Switch
        android:id="@+id/swManterConect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginTop="202dp"
        android:text="Manter Conectado" />

    <Button
        android:id="@+id/btnLogar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="222dp"
        android:layout_marginEnd="129dp"
        android:text="Logar" />

</RelativeLayout>